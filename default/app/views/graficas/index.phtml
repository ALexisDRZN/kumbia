    crossorigin="anonymous"
></script>

    <script>
        // Recibe los datos del backend
        const grafica = <?= $grafica ?>;

        // Formatea fechas como 'Oct-17'
        function convertirFechasSoloDia(fechas) {
            return fechas.map(f => {
                return f;
            });
        }

        // Configuraci칩n de la gr치fica
        const sales_chart_options = {
            series: [
                { name: 'pH', data: grafica.ph },
                { name: 'Turvidez', data: grafica.turbidez },
                { name: 'Conductividad', data: grafica.conductividad },
                { name: 'Temperatura', data: grafica.temperatura },
                { name: 'Nivel de agua', data: grafica.nivel_agua },
            ],
            chart: {
                height: 300,
                type: 'area',
                toolbar: { show: false },
            },
            legend: { show: true },
            colors: ['#0d6efd', '#20c997', '#ffc107', '#d63384', '#0dcaf0'],
            dataLabels: { enabled: false },
            stroke: { curve: 'smooth' },
            xaxis: {
                type: 'category',
                categories: convertirFechasSoloDia(grafica.fechas),
                labels: {
                    rotate: -45,
                    formatter: function(val) {
                        return val; // Ya viene como 'Oct-17'
                    }
                }
            },
            tooltip: {
                x: {
                    formatter: function(val) {
                        return val; // Muestra 'Oct-17'
                    }
                }
            },
        };

        const sales_chart = new ApexCharts(
            document.querySelector('#sales-chart'),
            sales_chart_options,
        );
        sales_chart.render();
    </script>
